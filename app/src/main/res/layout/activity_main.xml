<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#8F6633"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/principal"

    >


    <ImageView
        android:id="@+id/apo"
        android:layout_width="384dp"
        android:layout_height="203dp"
        android:src="@mipmap/ic_dark"
        app:layout_constraintBottom_toTopOf="@+id/botontroleada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.511"
        tools:ignore="MissingConstraints">


    </ImageView>

    <Button
        android:id="@+id/botontroleada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comenzar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"


        />

    <EditText
        android:id="@+id/et1"
        android:text="Introduce tu nombre :"
        android:layout_width="258dp"
        android:layout_height="86dp"
        android:tag="Soy el editText 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botontroleada"
        tools:ignore="MissingConstraints"
        android:visibility="invisible"
        />



</androidx.constraintlayout.widget.ConstraintLayout>